{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["esnext", "dom"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": false,
        "declaration": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "test"
    ]
}